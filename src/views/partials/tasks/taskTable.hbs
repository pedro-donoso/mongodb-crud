{{#if tasks}}
   <table class="table table-danger table-bordered text-center">
    <thead>
      <tr>
        <th>N°</th>
        <th>Título</th>
        <th>Descripción</th>
        <th>Operaciones</th>
      </tr>
    </thead>
    <tbody>
      {{#each tasks}}
        <tr>
          <td>{{@index}}</td>
          <td>{{title}}</td>
          <td>{{description}}</td>
          <td>
            {{#if done}}
              <a
                class="btn btn-success btn-sm"
                href="/tasks/{{_id}}/toggleDone"
              >Realizada</a>
            {{else}}
              <a class="btn btn-dark btn-sm" href="/tasks/{{_id}}/toggleDone">
                Sin hacer
              </a>
            {{/if}}
            <a href="/tasks/{{_id}}/delete" class="btn btn-danger btn-sm">
              Borrar
            </a>
            <a href="/tasks/{{_id}}/edit" class="btn btn-info btn-sm">
              Editar
            </a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
 
{{else}}
  <div class="h-100 d-flex align-items-center justify-content-center">
    <div class="text-center text-white">
      <h4>Sin Tareas</h4>
      <img src="/icons/empty.svg" class="w-75" />
    </div>
  </div>
{{/if}}